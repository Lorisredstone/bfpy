    // ia lvl 1
    ia_level1_if if 
        ia_random
    end
    // ia lvl 2
    ia_level2_if if
        ia_win
        ia_block
        ia_random
    end
    // ia lvl 3
    ia_level3_if if
        ia_win
        ia_block
        // HERE : TODO : IA LEVEL 3 : IA_SMART_ASS
        ia_random
    end

    1 continue_ia set reset_checks
    
    check_if_stopped
end

